<style>
  .about {
    padding: 8rem 2rem;
    background: var(--bg-deep);
  }

  .about-container {
    max-width: var(--content-narrow);
    margin: 0 auto;
  }

  .about-title {
    font-size: clamp(2rem, 3.5vw, 2.625rem);
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--white-pure);
    margin-bottom: 2.5rem;
  }

  .about-body {
    margin-bottom: 4rem;
  }

  .about-body p {
    font-size: 1.125rem;
    line-height: 1.75;
    color: var(--gray-light);
    margin-bottom: 1.5rem;
  }

  .about-closing {
    font-weight: 500;
    color: var(--white-warm);
  }

  /* Flywheel Visual */
  .flywheel {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    padding: 3rem 0 0;
  }

  .flywheel-node {
    text-align: center;
    max-width: 160px;
  }

  .flywheel-icon {
    font-size: 2rem;
    margin-bottom: 0.75rem;
  }

  .flywheel-label {
    font-family: var(--font-display);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--white-pure);
    margin-bottom: 0.5rem;
  }

  .flywheel-desc {
    font-size: 0.875rem;
    color: var(--gray-mid);
    line-height: 1.4;
  }

  .flywheel-arrow {
    font-size: 1.5rem;
    color: var(--gold-base);
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .about {
      padding: 5rem 1.5rem;
    }

    .flywheel {
      flex-direction: column;
      gap: 2rem;
    }

    .flywheel-arrow {
      transform: rotate(90deg);
    }

    .flywheel-node {
      max-width: 100%;
    }
  }
</style>

<script>
  // Intersection Observer for fade-in
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.2 }
  );

  document.querySelectorAll('.about .fade-in').forEach(el => {
    observer.observe(el);
  });
</script>
