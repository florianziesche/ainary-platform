---
// Service Card Component â€” Individual service display
interface Props {
  icon: string;
  title: string;
  description: string;
  link: string;
  goldVariant?: 'warm' | 'base' | 'cool' | 'pale' | 'deep';
}

const { icon, title, description, link, goldVariant = 'warm' } = Astro.props;
---

<article class="service-card" role="article">
  <div class="service-icon" aria-hidden="true">{icon}</div>
  <h3 class={`service-title gold-${goldVariant}`}>{title}</h3>
  <p class="service-desc" set:html={description}></p>
  <a href={link} class={`service-link gold-${goldVariant}`}>
    Mehr erfahren
    <svg class="arrow-icon" aria-hidden="true" width="16" height="16" viewBox="0 0 16 16">
      <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.5" fill="none"/>
    </svg>
  </a>
</article>

<style>
  .service-card {
    background: var(--bg-card);
    border: 1px solid var(--gray-rule);
    border-radius: 8px;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
  }

  @media (hover: hover) {
    .service-card:hover {
      border-color: rgba(200, 170, 80, 0.2);
      transform: translateY(-4px);
      box-shadow: var(--shadow-card-hover);
    }
  }

  .service-icon {
    font-size: 2rem;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .service-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.02em;
    margin-bottom: 0.5rem;
  }

  .service-title.gold-warm { color: var(--gold-warm); }
  .service-title.gold-base { color: var(--gold-base); }
  .service-title.gold-cool { color: var(--gold-cool); }
  .service-title.gold-pale { color: var(--gold-pale); }
  .service-title.gold-deep { color: var(--gold-deep); }

  .service-desc {
    font-size: 0.875rem;
    color: var(--gray-light);
    line-height: 1.75;
    flex: 1;
  }

  .service-desc :global(.mono) {
    font-family: var(--font-mono);
    color: var(--gold-warm);
    font-size: 0.85em;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.02em;
    text-decoration: none;
    margin-top: auto;
    transition: all 0.2s ease;
  }

  .service-link.gold-warm { color: var(--gold-base); }
  .service-link.gold-base { color: var(--gold-base); }
  .service-link.gold-cool { color: var(--gold-cool); }
  .service-link.gold-pale { color: var(--gold-pale); }
  .service-link.gold-deep { color: var(--gold-deep); }

  @media (hover: hover) {
    .service-link:hover {
      gap: 0.75rem;
    }
    .service-link.gold-warm:hover { color: var(--gold-warm); }
    .service-link.gold-base:hover { color: var(--gold-warm); }
    .service-link.gold-cool:hover { color: var(--gold-warm); }
    .service-link.gold-pale:hover { color: var(--gold-warm); }
    .service-link.gold-deep:hover { color: var(--gold-warm); }
  }

  .service-link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
    border-radius: 4px;
  }

  .arrow-icon {
    transition: transform 0.2s ease;
  }

  @media (max-width: 600px) {
    .service-card {
      padding: 1.5rem;
    }
  }
</style>
