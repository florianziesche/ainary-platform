import ServiceCard from './ServiceCard.astro';

const services = [
  {
    icon: 'üè≠',
    title: 'Manufacturing AI',
    description: `CNC automation, production planning, and predictive maintenance powered by AI that reads CAD/CAM files and generates machine code. We've cut planning time by <span class="mono">70%</span> and error rates to <span class="mono">&lt;0.2%</span>. Not "AI for manufacturing" ‚Äî AI that IS the manufacturing workflow.`,
    link: '/consulting#manufacturing',
    goldVariant: 'warm' as const
  },
  {
    icon: 'üì∞',
    title: 'Media & Publishing',
    description: `Content intelligence, automated editorial workflows, and audience analytics for publishers navigating the AI transition. We build systems that augment editorial teams ‚Äî not replace them. AI-assisted content at scale, with human judgment intact.`,
    link: '/consulting#media',
    goldVariant: 'base' as const
  },
  {
    icon: '‚öñÔ∏è',
    title: 'Legal Tech',
    description: `Contract analysis, legal research, and compliance monitoring built on multi-agent architectures with sub-<span class="mono">0.2%</span> hallucination rates. Shipped to production for enterprise legal teams. We built the system. We know where it breaks.`,
    link: '/consulting#legal',
    goldVariant: 'cool' as const
  },
  {
    icon: 'üóÇÔ∏è',
    title: 'Office & Operations',
    description: `Intelligent document processing, workflow automation, and operational AI that integrates into existing enterprise stacks. No rip-and-replace. No 18-month implementation timelines. Production-ready AI that plugs into what you already use.`,
    link: '/consulting#operations',
    goldVariant: 'pale' as const
  },
  {
    icon: 'üéì',
    title: 'Workshops & Training',
    description: `Hands-on AI training for technical teams and leadership. Not "intro to ChatGPT" workshops ‚Äî deep implementation sessions on RAG architecture, agent systems, and production deployment. We teach what we build. Frameworks, tools, and hard-won lessons.`,
    link: '/consulting#workshops',
    goldVariant: 'deep' as const
  },
  {
    icon: 'üíº',
    title: 'Advisory & Strategy',
    description: `Fractional CTO and AI strategy for companies that need technical leadership without a full-time hire. Architecture review, vendor evaluation, build-vs-buy analysis. We'll tell you when NOT to use AI. That's the most valuable advice.`,
    link: '/consulting#advisory',
    goldVariant: 'warm' as const
  }
];
---

<section class="services" id="services">
  <div class="services-container">
    <span class="section-tag">What We Do</span>

    <h2 class="services-title fade-in">
      AI That Ships. For Industries That Build.
    </h2>

    <p class="services-subtitle fade-in">
      Six practice areas. One philosophy: production-grade AI
      with measurable outcomes ‚Äî or we tell you not to bother.
    </p>

    <div class="services-grid">
      {services.map((service) => (
        <ServiceCard
          icon={service.icon}
          title={service.title}
          description={service.description}
          link={service.link}
          goldVariant={service.goldVariant}
        />
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: 8rem 2rem;
    background: var(--bg-base);
  }

  .services-container {
    max-width: var(--content-max);
    margin: 0 auto;
  }

  .services-title {
    font-size: clamp(2rem, 3.5vw, 2.625rem);
    font-weight: 600;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--white-pure);
    margin-bottom: 1.5rem;
  }

  .services-subtitle {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--gray-light);
    max-width: 640px;
    margin-bottom: 4rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .services {
      padding: 5rem 1.5rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .services-subtitle {
      margin-bottom: 3rem;
    }
  }
</style>

<script>
  // Intersection Observer for fade-in
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    },
    { threshold: 0.1 }
  );

  document.querySelectorAll('.services .fade-in').forEach(el => {
    observer.observe(el);
  });
</script>
